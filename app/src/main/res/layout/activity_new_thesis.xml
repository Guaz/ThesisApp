<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/new_thesis_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="title"/>

        <EditText
            android:id="@+id/new_thesis_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="description"/>

        <EditText
            android:id="@+id/new_thesis_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="language"/>

        <EditText
            android:id="@+id/new_thesis_student_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="student skills"/>

        <EditText
            android:id="@+id/new_thesis_technologies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="technologies"/>

        <EditText
            android:id="@+id/new_thesis_reviewer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="reviewer email"/>

        <Button
            android:id="@+id/new_thesis_post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/new_thesis_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>