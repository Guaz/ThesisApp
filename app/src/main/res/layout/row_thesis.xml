<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/row_thesis_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Badania nad badaniowoscia zadan badaniowych"

        />

    <TextView
        android:id="@+id/row_thesis_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Opis badania nad badaniem badania badaniowosci pracy badawczej."

        />

    <TextView
        android:id="@+id/row_thesis_skills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Java, Scala, Taniec disco"

        />

</LinearLayout>